#░░░░░░░░ ALIASES ░░░░░░░░#

# Misc.
alias codeo='open . -a "Visual Studio Code"'
alias dotfiles='open ~/.dotfiles -a "Visual Studio Code"'
alias reload='source ~/.zshrc; echo "\n╔════════════════════╗\n║ ✅ .zshrc reloaded ║\n╚════════════════════╝"'
alias lsa='ls -lAhF --group-directories-first --color'

# Git
alias gh="git log --format='%Cgreen%h%Creset %C(cyan)%an%Creset %C(yellow)(%cr)%Creset %n%s%n' --graph"
alias gs='git status'
alias gl='git pull'
alias gp='git push'
alias gd='git difftool'
